<?xml version="1.0"?>
<config>
	<modules>
		<Sm_Instagramgallery>
			<version>1.0.0</version>
		</Sm_Instagramgallery>
	</modules>

	<global>
		<models>
			<instagramgallery>
				<class>Sm_Instagramgallery_Model</class>
			</instagramgallery>
		</models>

		<blocks>
			<instagramgallery>
				<class>Sm_Instagramgallery_Block</class>
			</instagramgallery>
		</blocks>

		<helpers>
			<instagramgallery>
				<class>Sm_Instagramgallery_Helper</class>
			</instagramgallery>
		</helpers>
	</global>

	<adminhtml>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<instagramgallery translate="title" module="instagramgallery">
											<title>SM Image Instagram</title>
										</instagramgallery>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>

	<frontend>
		<routers>
			<instagramgallery>
				<use>standard</use>
				<args>
					<module>Sm_Instagramgallery</module>
					<frontName>instagramgallery</frontName>
				</args>
			</instagramgallery>
		</routers>
		<layout>
			<updates>
				<instagramgallery>
					<file>sm/instagramgallery.xml</file>
				</instagramgallery>
			</updates>
		</layout>
	</frontend>

	<default>
		<instagramgallery>
			<general>
				<enabled>1</enabled>
				<title>INSTAGRAM PHOTO</title>
				<users>267432806</users>
				<access_token>367751902.1677ed0.f76f70d96cc74e669f99fb6cd7747a7a</access_token>
				<limit_image>9</limit_image>
				<nb_column1>3</nb_column1>
				<nb_column2>3</nb_column2>
				<nb_column3>3</nb_column3>
				<nb_column4>3</nb_column4>
			</general>
		</instagramgallery>
	</default>
</config>