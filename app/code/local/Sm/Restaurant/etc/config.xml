<?xml version="1.0"?>
<config>
	<modules>
		<Sm_Restaurant>
			<version>1.0.0</version>
			<title>MagenTech.com</title>
			<link><![CDATA[http://www.magentech.com/]]></link>
		</Sm_Restaurant>
	</modules>
	<global>
		<models>
			<restaurant>
				<class>Sm_Restaurant_Model</class>
			</restaurant>
		</models>	
		<blocks>
            <restaurant>
                <class>Sm_Restaurant_Block</class>
            </restaurant>
			<page>
                <rewrite>
                    <html_head>Sm_Restaurant_Block_Page_Html_Head</html_head>
                </rewrite>
            </page>	
        </blocks>				
		<helpers>
            <restaurant>
                <class>Sm_Restaurant_Helper</class>
            </restaurant>
			<core>
                <rewrite>
                    <data>Sm_Restaurant_Helper_Core_Data</data>
                </rewrite>
            </core>	
        </helpers>
        <resources>
        	<restaurant_setup>
        		<setup>
        			<module>Sm_Restaurant</module>
        		</setup>
				<connection>
					<use>core_setup</use>
				</connection>
        	</restaurant_setup>
        </resources>
		<events>
			<controller_action_layout_render_before>
				 <observers>
                    <restaurant>
                        <type>singleton</type>
                        <class>restaurant/observer</class>
                        <method>less_compile</method>
                    </restaurant>
                </observers>
			</controller_action_layout_render_before>
		</events>	
	</global>

	<frontend>
		<routers>
			<restaurant>
				<use>standard</use>
				<args>
					<module>Sm_Restaurant</module>
					<frontName>restaurant</frontName>
				</args>
			</restaurant>
		</routers>
		<layout>
			<updates>
				<restaurant>
					<file>sm/restaurant.xml</file>
				</restaurant>
			</updates>
		</layout>
		<translate>
			<modules>
				<Sm_Restaurant>
					<files>
						<default>Sm_Restaurant.csv</default>
					</files>
				</Sm_Restaurant>
			</modules>
		</translate>
	</frontend>
	
	<admin>        
		<routers>			
			<restaurant>				
				<use>admin</use>				
				<args>					
					<module>Sm_Restaurant</module>					
					<frontName>restaurant</frontName>				
				</args>			
			</restaurant>        
		</routers>    
	</admin>	
	
	<adminhtml>
        <translate>
      		<modules>
          		<Sm_Restaurant>
                     <files>
                          <default>Sm_Restaurant.csv</default>
                     </files>
                </Sm_Restaurant>
            </modules>
        </translate>
        <layout>
            <updates>
                <restaurant module="Sm_Restaurant">
                    <file>sm/restaurant.xml</file>
                </restaurant>
            </updates>
        </layout>
    </adminhtml>
	
 	<default>
		<restaurant_cfg module="restaurant">
			<general>
			<!-- Layout -->			
				<layout_styles>1</layout_styles>
				<header_style>df</header_style>
				<color>red</color>
			<!-- Entire Page -->
				<body_font_family>Georgia</body_font_family>
				<body_font_size>12px</body_font_size>
				<google_font>Droid Serif</google_font>
				<google_font_targets>Lobster</google_font_targets>
				<direction>1</direction>
				<body_link_color>#333333</body_link_color>
				<body_link_hover_color>#ED1C24</body_link_hover_color>
				<body_text_color>#666666</body_text_color>
				<body_background_color>#FFFFFF</body_background_color>
				<use_background_image>0</use_background_image>
				<body_background_image></body_background_image>
				<use_customize_image></use_customize_image>
				<background_customize_image></background_customize_image>
				<background_repeat></background_repeat>
				<background_position></background_position>
			<!-- Menu -->	
				<menu_styles>1</menu_styles>
				<menu_ontop>0</menu_ontop>
				<responsive_menu>3</responsive_menu>
			</general>
			<detail_restaurant>
				<show_imagezoom>1</show_imagezoom>
				<zoom_mode>1</zoom_mode>
				<show_related>1</show_related>
				<related_number>9</related_number>
				<show_upsell>1</show_upsell>
				<upsell_number>9</upsell_number>
				<show_customtab>0</show_customtab>
				<customtab_name>Custom Tab</customtab_name>
				<customtab_content>Custom Tab Content</customtab_content>
			</detail_restaurant>
			<rich_snippets_setting>
				<use_rich_snippet>1</use_rich_snippet>
				<set_breadcrumbs>1</set_breadcrumbs>
				<google_plus_href>https://plus.google.com/u/0/+Smartaddons</google_plus_href>
			</rich_snippets_setting>
			<social_restaurant>
				<show_facebook>1</show_facebook>
				<facebook_name>Facebook</facebook_name>
				<facebook_url>https://www.facebook.com/MagenTech</facebook_url>
				<show_twitter>1</show_twitter>
				<twitter_name>Twitter</twitter_name>
				<twitter_url>https://twitter.com/smartaddons</twitter_url>
				<show_google>1</show_google>
				<google_name>Google+</google_name>
				<google_url>https://plus.google.com/u/0/+Smartaddons/posts</google_url>				
				<show_rss>1</show_rss>
				<rss_name>Rss</rss_name>
				<rss_url>#</rss_url>
                <show_vimeo>1</show_vimeo>
				<vimeo_name>Vimeo</vimeo_name>
				<vimeo_url>#</vimeo_url>
			</social_restaurant>
			<advanced>
				<show_cpanel>1</show_cpanel>
				<show_ontop>1</show_ontop>
				<!--use_ajaxcart>1</use_ajaxcart-->
				<show_addtocart>1</show_addtocart>
				<show_wishlist>1</show_wishlist>
				<show_compare>1</show_compare>
				<!--show_quickview>1</show_quickview-->
				<custom_copyright>0</custom_copyright>
				<copyright></copyright>
				<custom_css></custom_css>
				<custom_js></custom_js>
				<!--Minify css, js-->
				<compress_css_js></compress_css_js>
				<enable_yuicompressor></enable_yuicompressor>
			</advanced>
		</restaurant_cfg>
	</default> 
</config> 